<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="WeatherApp" MinHeight="450" MinWidth="800" Height="450" Width="800">
    <Grid Background="Transparent">
        
        <!-- Main grid row definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header grid -->
        <Border>
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" Opacity="0.8" />
            </Border.Effect>
            
            <Grid Grid.Row="0" Background="Azure">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <StackPanel Grid.Column="0" Background="DarkOrange" Orientation="Horizontal" VerticalAlignment="Center">
                    <Label FontSize="39" FontWeight="Bold" Margin="15,0,0,0">WEATHER APP</Label>
                </StackPanel>
            
                <!-- City search-bar -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search-box -->
                    <TextBox Grid.Row="1" Grid.Column="1" TextAlignment="Center" VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                <Style.Resources>
                                    <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                        <VisualBrush.Visual>
                                            <Label Content="Wprowadź nazwę miejscowości" Foreground="DarkGray" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    
                    <Button Grid.Row="1" Grid.Column="3" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources> 
                        SZUKAJ</Button>
                </Grid>
            </Grid>
        </Border>
            
        <!-- Information grid -->
        <Grid Grid.Row="1">
            
            <Grid Margin="25,14" Background="Aqua">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Main data grid -->
                <Grid Grid.Row="0" Background="Bisque">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/> <!-- Weather data -->
                        <ColumnDefinition Width="*"/> <!-- Wind data -->
                        <ColumnDefinition Width="*"/> <!-- City name / Country / Sunrise / Sunset / Timezone data -->
                        <ColumnDefinition Width="*"/> <!-- Coordinates data -->
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Background="#FFAA43">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/> <!-- Main + icon -->
                                <RowDefinition Height="*"/> <!-- Further description -->
                                <RowDefinition Height="5*"/> <!-- Placeholder -->
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Background="#F3F">
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,0" VerticalAlignment="Center">
                                    <Label>[ICON]</Label>
                                    <Label>Weather</Label>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1" Background="#F32">
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,0" VerticalAlignment="Center">
                                    <Label>Description</Label>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="2" Background="#AF2">
                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1" Background="#AAFF43">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/> <!-- Wind header -->
                                <RowDefinition Height="*"/> <!-- Speed -->
                                <RowDefinition Height="*"/> <!-- Direction -->
                                <RowDefinition Height="*"/> <!-- Gust -->
                                <RowDefinition Height="2*"/> <!-- Placeholder -->
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,0" VerticalAlignment="Center">
                                    <Label>WIND</Label>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1">
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,0" VerticalAlignment="Center">
                                    <Label>Speed</Label>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="2">
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,0" VerticalAlignment="Center">
                                    <Label>Direction</Label>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="3">
                                <StackPanel Orientation="Horizontal" Margin="25,0,0,0" VerticalAlignment="Center">
                                    <Label>Gust</Label>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="4">

                            </Grid>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="2" Background="#43AAFF">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/> <!-- City name & country-->
                                <RowDefinition Height="*"/> <!-- Sunrise -->
                                <RowDefinition Height="*"/> <!-- Sunset -->
                                <RowDefinition Height="*"/> <!-- Timezone -->
                                <RowDefinition Height="2*"/> <!-- Placeholder -->
                            </Grid.RowDefinitions>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="3" Background="#FAFA43">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/> <!-- X Coordinates -->
                            <RowDefinition Height="*"/> <!-- Y Coordinates -->
                            <RowDefinition Height="5*"/> <!-- Placeholder -->
                        </Grid.RowDefinitions>
                    </Grid>
                </Grid>
                
                <!-- Small data grid -->
                <Grid Grid.Row="1" Background="DarkMagenta"></Grid>
                
            </Grid>
                
        </Grid>
        
        <!-- Footer -->
        <Grid Grid.Row="2" Background="LightGreen">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label>© 2023 Igor Wdowiczak</Label>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
